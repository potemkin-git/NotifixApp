@{
    ViewData["Title"] = "Notifix Registration";
}

@section Css {
    <link rel="stylesheet" href="~/css/signstyle.css">
}

<img id="titleImg" src="~/images/title.png" alt="title">

<div class="form">

    <ul class="tab-group">
        <li class="tab"><a href="#signup">Sign Up</a></li>
        <li class="tab active"><a href="#login">Log In</a></li>
    </ul>

    <div class="tab-content">

        <div id="login">
            <p id="loginErrorMsg" class="errMsg"> </p>
            <div class="field-wrap">
                <label>
                    Login<span class="req">*</span>
                </label>
                <input id="loginInput" type="text" autocomplete="off" />
            </div>

            <div class="field-wrap">
                <label>
                    Password<span class="req">*</span>
                </label>
                <input id="pwdInput" type="password" autocomplete="off" />
            </div>

            <p class="forgot"><a href='/password'>Forgot Password?</a></p>

            <button type="button" class="button button-block" onclick="loginSubmit()" >Log In</button>
            <p style="width: 100%; text-align:center; color: #FFF">OR</p>
            <button style="background-color: royalblue" type="button" class="button button-block" onclick="unsetCookie('/map');">Connect as anonymous</button>
        </div>

        <div id="signup">
            <p id="signUpErrorMsg" class="errMsg"> </p>

            <form action="#" method="post">

                <div class="top-row">
                    <div class="field-wrap">
                        <label>
                            First Name<span class="req">*</span>
                        </label>
                        <input id="fName" type="text" />
                    </div>

                    <div class="field-wrap">
                        <label>
                            Last Name<span class="req">*</span>
                        </label>
                        <input id="lName" type="text" />
                    </div>
                </div>

                <div class="field-wrap">
                    <label>
                        Login<span class="req">*</span>
                    </label>
                    <input id="loginNew" type="text" />
                </div>

                <div class="field-wrap">
                    <label>
                        Email Address<span class="req">*</span>
                    </label>
                    <input id="email" type="email" />
                </div>

                <div class="field-wrap">
                    <label>
                        City<span class="req">*</span>
                    </label>
                    <input id="city" type="text" />
                </div>

                <div class="field-wrap">
                    <label>
                        Address<span class="req">*</span>
                    </label>
                    <input id="address" type="text" />
                </div>

                <div class="field-wrap">
                    <label>
                        Set A Password<span class="req">*</span>
                    </label>
                    <input id="password" type="password" autocomplete="off" />
                </div>

                <div class="field-wrap avatar">
                    <label>
                        Choose an avatar<span class="req">*</span>
                    </label>
                    <input id="btnAvatar" type="button" value="Pick my avatar" onclick="openGrid()">
                    <img id="avaThumb" src="~/images/avatars/miss.jpg">
                </div>

                <button type="submit" class="button button-block">Get Started</button>
                <p style="width: 100%; text-align:center; color: #FFF">OR</p>
                <button style="background-color: royalblue" type="button" class="button button-block" onclick="unsetCookie('/map');">Connect as anonymous</button>
            </form>

        </div>


    </div><!-- tab-content -->

</div> <!-- /form -->

<div id="avatarChoice"></div>


@section Scripts {
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/js/tools.js"></script>
    <script src="~/js/WSinterface.js"></script>
    <script src="~/js/loginform/signFormScript.js"></script>
    <script src="~/js/loginform/loginFormHandler.js"></script>
    <script src="~/js/loginform/signUpFormHandler.js"></script>
}

