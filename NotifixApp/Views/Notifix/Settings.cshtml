@{
    ViewData["Title"] = "Notifix Registration";
}

@section Css {
    <link rel="stylesheet" href="~/css/SettingsStyle.css">
}

<div class="form">
    <div id="settings">
        <h1>Edit Profile</h1>
        <p id="settingsErrorMsg" class="errMsg"> </p>

        <form action="javascript:window.location.href='indextml'" method="post">

            <div class="top-row">
                <div class="field-wrap">
                    <label>
                        First Name<span class="req"></span>
                    </label>
                    <input id="fName" onClick="this.select();" type="text" value="" />
                </div>

                <div class="field-wrap">
                    <label>
                        Last Name<span class="req"></span>
                    </label>
                    <input id="lName" onClick="this.select();" type="text" />
                </div>
            </div>

            <div class="field-wrap">
                <label>
                    Login<span class="req"></span>
                </label>
                <input id="loginNew" onClick="this.select();" type="text" />
            </div>

            <div class="field-wrap">
                <label>
                    Email Address<span class="req"></span>
                </label>
                <input id="email" onClick="this.select();" type="email" />
            </div>

            <div class="field-wrap">
                <label>
                    City<span class="req"></span>
                </label>
                <input id="city" onClick="this.select();" type="text" />
            </div>

            <div class="field-wrap">
                <label>
                    Address<span class="req"></span>
                </label>
                <input id="address" onClick="this.select();" type="text" />
            </div>

            <div class="field-wrap">
                <label>
                    Set A Password<span class="req"></span>
                </label>
                <input id="password" type="password" onClick="this.select();" autocomplete="off" />
            </div>

            <div class="field-wrap avatar">
                <label>
                    Choose an avatar<span class="req"></span>
                </label>
                <input id="btnAvatar" type="button" value="Pick my avatar" onclick="openGrid()">
                <img id="avaThumb" src="~/images/avatars/miss.jpg">
            </div>

            <button type="submit" class="button button-block">
                Edit
            </button>

        </form>

    </div>


</div><!-- tab-content -->

<div id="avatarChoice"></div>

<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

@section Scripts {
    <script src="~/js/tools.js"></script>
    <script src="~/js/WSinterface.js"></script>
    <script src="~/js/loginform/signFormScript.js"></script>
    <script src="~/js/loginform/settingsFormHandler.js"></script>
}

